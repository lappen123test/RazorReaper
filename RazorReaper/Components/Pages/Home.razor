@code {
    private SystemStatus systemStatus = new SystemStatus { IsHealthy = true };
    private DateTime currentTime = DateTime.Now;
    private System.Timers.Timer? clockTimer;

    private WeatherData? weather = null;
    private bool weatherLoading = true;

    private long totalLifetimeClicks = 0;
    private string totalSessionTime = "0h 0m";
    private int configChanges = 0;

    private const string CLICKS_STORAGE_KEY = "TotalLifetimeClicks";
    private const string CONFIG_CHANGES_STORAGE_KEY = "ConfigChanges";

    // System resources
    private int cpuUsage = 0;
    private int ramUsage = 0;
    private double ramUsedGB = 0;
    private double ramTotalGB = 0;
    private double processMemoryMB = 0;
    private System.Timers.Timer? resourceTimer;
    private PerformanceCounter? cpuCounter;
    private PerformanceCounter? ramCounter;

    protected override async Task OnInitializedAsync()
    {
        // Start clock timer
        clockTimer = new System.Timers.Timer(1000);
        clockTimer.Elapsed += (s, e) =>
        {
            currentTime = DateTime.Now;
            InvokeAsync(StateHasChanged);
        };
        clockTimer.Start();

        // Load weather data
        await LoadWeatherData();

        // Load statistics from storage
        await LoadStatistics();

        // Add initial activity
        ActivityService.AddActivity("Dashboard loaded", "success");

        // Start resource monitoring
        StartResourceMonitoring();

        await base.OnInitializedAsync();
    }

    [DllImport("kernel32.dll")]
    [return: MarshalAs(UnmanagedType.Bool)]
    static extern bool GetPhysicallyInstalledSystemMemory(out long TotalMemoryInKilobytes);

    private void StartResourceMonitoring()
    {
        try
        {
            // Initialize performance counters
            cpuCounter = new PerformanceCounter("Processor", "% Processor Time", "_Total");
            ramCounter = new PerformanceCounter("Memory", "% Committed Bytes In Use");

            // Get total RAM using WMI
            GetPhysicallyInstalledSystemMemory(out long totalMemoryKB);
            ramTotalGB = Math.Round(totalMemoryKB / 1024.0 / 1024.0, 2);

            // First read to initialize counters
            cpuCounter.NextValue();
            ramCounter.NextValue();

            // Start monitoring timer
            resourceTimer = new System.Timers.Timer(2000); // Update every 2 seconds
            resourceTimer.Elapsed += UpdateResources;
            resourceTimer.Start();

            Logger.LogDebug("Resource monitoring started: {TotalRAM} GB total RAM", ramTotalGB);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error starting resource monitoring");
        }
    }

    private void UpdateResources(object? sender, System.Timers.ElapsedEventArgs e)
    {
        try
        {
            // Get CPU usage
            cpuUsage = (int)Math.Round(cpuCounter?.NextValue() ?? 0);

            // Get RAM usage
            ramUsage = (int)Math.Round(ramCounter?.NextValue() ?? 0);

            // Calculate used RAM
            var totalMemory = (long)(ramTotalGB * 1024.0 * 1024.0 * 1024.0);
            ramUsedGB = Math.Round((ramUsage / 100.0) * ramTotalGB, 2);

            // Get current process memory
            var process = Process.GetCurrentProcess();
            processMemoryMB = Math.Round(process.WorkingSet64 / 1024.0 / 1024.0, 1);

            InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating resource usage");
        }
    }

    private async Task LoadWeatherData()
    {
        weatherLoading = true;
        StateHasChanged();

        try
        {
            Logger.LogInformation("Loading weather data");
            weather = await WeatherService.GetWeatherAsync();

            if (weather != null)
            {
                Logger.LogInformation("Weather loaded successfully: {Temperature}°C, {Condition} in {City}",
                    weather.Temperature, weather.Condition, weather.City);
            }
            else
            {
                Logger.LogWarning("Weather data could not be loaded");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading weather data");
            weather = null;
        }
        finally
        {
            weatherLoading = false;
            StateHasChanged();
        }
    }


    private async Task LoadStatistics()
    {
        try
        {
            var clicksStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", CLICKS_STORAGE_KEY);
            var configStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", CONFIG_CHANGES_STORAGE_KEY);

            if (!string.IsNullOrEmpty(clicksStr) && long.TryParse(clicksStr, out long clicks))
            {
                totalLifetimeClicks = clicks;
            }

            if (!string.IsNullOrEmpty(configStr) && int.TryParse(configStr, out int configs))
            {
                configChanges = configs;
            }

            Logger.LogDebug("Statistics loaded: {Clicks} clicks, {Configs} config changes", totalLifetimeClicks, configChanges);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading statistics");
        }
    }

    private async Task SaveStatistics()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", CLICKS_STORAGE_KEY, totalLifetimeClicks.ToString());
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", CONFIG_CHANGES_STORAGE_KEY, configChanges.ToString());
            Logger.LogDebug("Statistics saved");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving statistics");
        }
    }

    private void ClearActivity()
    {
        Logger.LogInformation("Clearing all activities");
        ActivityService.ClearActivities();
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        Logger.LogDebug("Disposing Home component resources");

        clockTimer?.Stop();
        clockTimer?.Dispose();
        resourceTimer?.Stop();
        resourceTimer?.Dispose();
        cpuCounter?.Dispose();
        ramCounter?.Dispose();

        await Task.CompletedTask;
    }
