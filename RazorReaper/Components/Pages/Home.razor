        }
    }

    private void LoadWiFiInfo()
    {
        try
        {
            Logger.LogDebug("Detecting WiFi information...");

            // Use netsh command to get WiFi information - works on all Windows 10+ systems
            var processInfo = new ProcessStartInfo
            {
                FileName = "netsh",
                Arguments = "wlan show interfaces",
                RedirectStandardOutput = true,
                RedirectStandardError = true,
                UseShellExecute = false,
                CreateNoWindow = true
            };

            using var process = Process.Start(processInfo);
            if (process != null)
            {
                var output = process.StandardOutput.ReadToEnd();
                var error = process.StandardError.ReadToEnd();
                process.WaitForExit();

                // Check if WiFi adapter is not available or disabled
                if (!string.IsNullOrWhiteSpace(error) || output.Contains("not", StringComparison.OrdinalIgnoreCase))
                {
                    Logger.LogDebug("WiFi adapter not available or not connected");
                    wifiName = "No WiFi Adapter";
                    wifiSignalStrength = "N/A";
                    return;
                }

                // Parse the output to extract SSID and signal strength
                var lines = output.Split(new[] { '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries);
                bool foundWifi = false;

                foreach (var line in lines)
                {
                    var trimmedLine = line.Trim();

                    if (trimmedLine.StartsWith("SSID", StringComparison.OrdinalIgnoreCase) &&
                        !trimmedLine.StartsWith("BSSID", StringComparison.OrdinalIgnoreCase))
                    {
                        var parts = trimmedLine.Split(':');
                        if (parts.Length >= 2)
                        {
                            wifiName = parts[1].Trim();
                            if (string.IsNullOrWhiteSpace(wifiName))
                            {
                                wifiName = "Not Connected";
                            }
                            else
                            {
                                foundWifi = true;
                            }
                        }
                    }
                    else if (trimmedLine.StartsWith("Signal", StringComparison.OrdinalIgnoreCase))
                    {
                        var parts = trimmedLine.Split(':');
                        if (parts.Length >= 2)
                        {
                            wifiSignalStrength = parts[1].Trim();
                        }
                    }
                }

                if (foundWifi)
                {
                    Logger.LogInformation("WiFi connected: {Name} - {Signal}", wifiName, wifiSignalStrength);
                }
                else
                {
                    Logger.LogDebug("WiFi adapter available but not connected");
                }
            }
            else
            {
                Logger.LogDebug("Failed to start netsh process - WiFi detection unavailable");
                wifiName = "Unable to detect";
                wifiSignalStrength = "N/A";
            }
        }
        catch (Exception ex)
        {
            Logger.LogDebug(ex, "Could not detect WiFi information (this is normal for Ethernet-only systems)");
            wifiName = "Not Available";
            wifiSignalStrength = "N/A";
        }
    }

    private void LoadSystemHardwareInfo()
    {
        try
        {
            // Get CPU name - works for Intel, AMD, and all processor brands
            try
            {
                using (var searcher = new ManagementObjectSearcher("SELECT Name FROM Win32_Processor"))
                {
                    foreach (ManagementObject processor in searcher.Get())
                    {
                        cpuName = processor["Name"]?.ToString()?.Trim() ?? "Unknown";
                        break;
                    }
                }
            }
            catch (Exception ex)
            {
                Logger.LogDebug(ex, "Could not detect CPU name");
                cpuName = "Unknown";
            }

            // Get GPU name - works for NVIDIA, AMD, Intel, and all GPU brands
            try
            {
                using (var searcher = new ManagementObjectSearcher("SELECT Name FROM Win32_VideoController"))
                {
                    foreach (ManagementObject gpu in searcher.Get())
                    {
                        var name = gpu["Name"]?.ToString() ?? "";
                        // Skip Microsoft Basic Display Adapter (software renderer)
                        if (!string.IsNullOrWhiteSpace(name) &&
                            !name.Contains("Microsoft Basic", StringComparison.OrdinalIgnoreCase) &&
                            !name.Contains("Remote Desktop", StringComparison.OrdinalIgnoreCase))
                        {
                            gpuName = name.Trim();
                            break;
                        }
                    }
                }
            }
            catch (Exception ex)
            {
                Logger.LogDebug(ex, "Could not detect GPU name");
                gpuName = "Unknown";
            }

            // Get Motherboard name
            try
            {
                using (var searcher = new ManagementObjectSearcher("SELECT Product, Manufacturer FROM Win32_BaseBoard"))
                {
                    foreach (ManagementObject board in searcher.Get())
                    {
                        var manufacturer = board["Manufacturer"]?.ToString() ?? "";
                        var product = board["Product"]?.ToString() ?? "";
                        motherboardName = $"{manufacturer} {product}".Trim();
                        if (string.IsNullOrWhiteSpace(motherboardName))
                        {
                            motherboardName = "Unknown";
                        }
                        break;
                    }
                }
            }
            catch (Exception ex)
            {
                Logger.LogDebug(ex, "Could not detect motherboard name");
                motherboardName = "Unknown";
            }

            Logger.LogInformation("Hardware detected: CPU={CPU}, GPU={GPU}, Motherboard={Motherboard}", cpuName, gpuName, motherboardName);
        }
        catch (Exception ex)
        {
            Logger.LogWarning(ex, "Error loading system hardware information");
        }
    }

