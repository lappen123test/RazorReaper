@page "/"
@page "/home"
@using RazorReaper.Components.Shared
@using RazorReaper.Services
@using RazorReaper.Models
@using Microsoft.Extensions.Logging
@using Microsoft.Extensions.Options
@using RazorReaper.Configuration
@using System.Diagnostics
@using System.Management
@using System.Runtime.InteropServices
@inject IWeatherService WeatherService
@inject IActivityService ActivityService
@inject IArkPathProvider ArkPathProvider
@inject ILogger<Home> Logger
@inject IOptions<AppConfiguration> Configuration
@inject IJSRuntime JSRuntime
@inject INotificationService NotificationService
@implements IAsyncDisposable

<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar/>

    <main class="main-content">
        <header class="page-header">
            <h1 class="page-title">RazorReaper Dashboard</h1>
            <p class="page-subtitle">ARK: Survival Evolved Configuration & Server Management Tool</p>
        </header>

        <div class="dashboard-widgets">
            <div class="content-card widget-card clock-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                    <h3>Local Time</h3>
                </div>
                <div class="clock-display">
                    <div class="clock-time">@currentTime.ToString("HH:mm:ss")</div>
                    <div class="clock-date">@currentTime.ToString("dddd, MMMM dd, yyyy")</div>
                    <div class="clock-details">
                        <div class="clock-detail-item">
                            <span class="detail-label">Timezone:</span>
                            <span class="detail-value">@timeZoneInfo</span>
                        </div>
                        <div class="clock-detail-item">
                            <span class="detail-label">UTC Offset:</span>
                            <span class="detail-value">@utcOffset</span>
                        </div>
                        <div class="clock-detail-item">
                            <span class="detail-label">Week:</span>
                            <span class="detail-value">Week @weekNumber of @currentTime.Year</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content-card widget-card weather-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path fill-rule="evenodd" d="M5.5 16a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.977A4.5 4.5 0 1113.5 16h-8z" clip-rule="evenodd" />
                    </svg>
                    <h3>Weather</h3>
                </div>
                @if (weatherLoading)
                {
                    <div class="weather-loading">
                        <div class="spinner"></div>
                        <p>Loading weather...</p>
                    </div>
                }
                else if (weather != null)
                {
                    <div class="weather-display">
                        <div class="weather-icon-container">
                            @GetWeatherIcon(weather.Condition)
                        </div>
                        <div class="weather-main">
                            <div class="weather-temp">@weather.Temperature°C</div>
                            <div class="weather-condition">@weather.Condition</div>
                        </div>
                        <div class="weather-details">
                            <div class="weather-detail">
                                <span>Feels like:</span>
                                <span>@weather.FeelsLike°C</span>
                            </div>
                            <div class="weather-detail">
                                <span>Location:</span>
                                <span>@weather.City, @weather.Country</span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="weather-error-simple">
                        <p>Weather unavailable</p>
                        <button class="btn-small btn-retry" @onclick="LoadWeatherData">
                            Retry
                        </button>
                    </div>
                }
            </div>

            <div class="content-card widget-card stats-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
                    </svg>
                    <h3>Quick Stats</h3>
                </div>
                <div class="quick-stats">
                    <div class="stat-item">
                        <div class="stat-value">@totalLifetimeClicks.ToString("N0")</div>
                        <div class="stat-label">Total Clicks</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">@totalSessionTime</div>
                        <div class="stat-label">Session Time</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">@configChanges</div>
                        <div class="stat-label">Config Changes</div>
                    </div>
                </div>
            </div>

            <div class="content-card widget-card resource-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd" />
                    </svg>
                    <h3>System Resources</h3>
                </div>
                <div class="resource-stats">
                    <div class="resource-item">
                        <div class="resource-header">
                            <span class="resource-label">CPU</span>
                            <span class="resource-value">@cpuUsage%</span>
                        </div>
                        <div class="resource-bar">
                            <div class="resource-fill cpu" style="width: @cpuUsage%"></div>
                        </div>
                    </div>
                    @if (hasGpuCounter)
                    {
                        <div class="resource-item">
                            <div class="resource-header">
                                <span class="resource-label">GPU</span>
                                <span class="resource-value">@gpuUsage%</span>
                            </div>
                            <div class="resource-bar">
                                <div class="resource-fill gpu" style="width: @gpuUsage%"></div>
                            </div>
                        </div>
                    }
                    <div class="resource-item">
                        <div class="resource-header">
                            <span class="resource-label">RAM</span>
                            <span class="resource-value">@ramUsage%</span>
                        </div>
                        <div class="resource-bar">
                            <div class="resource-fill ram" style="width: @ramUsage%"></div>
                        </div>
                    </div>
                    <div class="resource-info">
                        <div class="resource-detail">
                            <span>Memory Used:</span>
                            <span>@ramUsedGB GB / @ramTotalGB GB</span>
                        </div>
                        <div class="resource-detail">
                            <span>Process:</span>
                            <span>@processMemoryMB MB</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content-card widget-card wifi-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
                        <path fill-rule="evenodd" d="M2 10a8 8 0 1116 0 8 8 0 01-16 0zm8-6a6 6 0 100 12 6 6 0 000-12z" clip-rule="evenodd" />
                    </svg>
                    <h3>Network</h3>
                </div>
                <div class="wifi-info">
                    <div class="wifi-detail">
                        <div class="wifi-label">Connection</div>
                        <div class="wifi-value">@wifiName</div>
                    </div>
                    <div class="wifi-detail">
                        <div class="wifi-label">Signal Strength</div>
                        <div class="wifi-value">@wifiSignalStrength</div>
                    </div>
                </div>
            </div>

            <div class="content-card widget-card hardware-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd" />
                    </svg>
                    <h3>Hardware</h3>
                </div>
                <div class="hardware-info">
                    <div class="hardware-item">
                        <div class="hardware-label">CPU</div>
                        <div class="hardware-value">@cpuName</div>
                    </div>
                    <div class="hardware-item">
                        <div class="hardware-label">GPU</div>
                        <div class="hardware-value">@gpuName</div>
                    </div>
                    <div class="hardware-item">
                        <div class="hardware-label">Motherboard</div>
                        <div class="hardware-value">@motherboardName</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content-card">
            <h2>Quick Actions</h2>
            <div class="actions-grid">

                <a href="/server" class="action-card">
                    <div class="action-icon server">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h12a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm14 1a1 1 0 11-2 0 1 1 0 012 0zM2 13a2 2 0 012-2h12a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2v-2zm14 1a1 1 0 11-2 0 1 1 0 012 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="action-content">
                        <h3>Connect to Server</h3>
                        <p>Quick connect to ARK servers via Battle Matrix connection method</p>
                        <div class="action-button">Connect Now</div>
                    </div>
                </a>

                <a href="/ini-changer" class="action-card">
                    <div class="action-icon config">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="action-content">
                        <h3>BaseDeviceProfiles Editor</h3>
                        <p>Load, modify, and apply optimized configuration presets</p>
                        <div class="action-button">Edit Configs</div>
                    </div>
                </a>

                <a href="/game" class="action-card">
                    <div class="action-icon game">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="action-content">
                        <h3>Game Management</h3>
                        <p>Manage game settings, backups, and advanced configurations</p>
                        <div class="action-button">Manage Game</div>
                    </div>
                </a>

            </div>
        </div>

        <div class="content-card activity-card">
            <div class="activity-header">
                <h3 class="activity-title">Recent Activity</h3>
                <button class="btn-small" @onclick="ClearActivity">Clear All</button>
            </div>
            <div class="activity-timeline-container">
                @if (ActivityService.GetRecentActivities().Count == 0)
                {
                    <div class="activity-empty">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <p>No recent activity</p>
                    </div>
                }
                else
                {
                    <div class="activity-timeline">
                        @foreach (var activity in ActivityService.GetRecentActivities())
                        {
                            <div class="timeline-item @activity.Type">
                                <div class="timeline-marker">
                                    <div class="timeline-dot"></div>
                                </div>
                                <div class="timeline-content">
                                    <div class="timeline-icon">
                                        @if (activity.Type == "success")
                                        {
                                            <svg fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                            </svg>
                                        }
                                        else if (activity.Type == "warning")
                                        {
                                            <svg fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                            </svg>
                                        }
                                        else
                                        {
                                            <svg fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                            </svg>
                                        }
                                    </div>
                                    <div class="timeline-body">
                                        <div class="timeline-title">@activity.Title</div>
                                        <div class="timeline-time">@activity.GetTimeAgo()</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="content-card">
            <div class="paths-header">
                <h3>System Paths</h3>
                @if (!isEditingArkPath)
                {
                    <button class="btn-small btn-edit" @onclick="StartEditingArkPath">
                        <svg fill="currentColor" viewBox="0 0 20 20" style="width: 14px; height: 14px;">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                        </svg>
                        Change ARK Path
                    </button>
                }
            </div>

            @if (isEditingArkPath)
            {
                <div class="path-edit-section">
                    <div class="path-edit-info">
                        <svg fill="currentColor" viewBox="0 0 20 20" style="width: 20px; height: 20px; color: var(--accent-orange);">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                        <p>Set a custom ARK installation path. This will be used for all file operations.</p>
                    </div>
                    <div class="path-edit-input">
                        <input type="text" @bind="customArkPath" placeholder="C:\Program Files (x86)\Steam\steamapps\common\ARK" class="ark-path-input" />
                    </div>
                    <div class="path-edit-actions">
                        <button class="btn btn-secondary" @onclick="SaveCustomArkPath">
                            <svg fill="currentColor" viewBox="0 0 20 20" style="width: 16px; height: 16px;">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            Save Path
                        </button>
                        <button class="btn btn-secondary" @onclick="CancelEditingArkPath">
                            <svg fill="currentColor" viewBox="0 0 20 20" style="width: 16px; height: 16px;">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                            Cancel
                        </button>
                        <button class="btn btn-secondary" @onclick="ResetToAutoDetect">
                            <svg fill="currentColor" viewBox="0 0 20 20" style="width: 16px; height: 16px;">
                                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                            </svg>
                            Auto-Detect
                        </button>
                    </div>
                </div>
            }

            <div class="paths-list">
                <div class="path-item clickable" @onclick="() => OpenFolderInExplorer(arkInstallPath)">
                    <div class="path-info-left">
                        <div class="path-icon-container">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                            </svg>
                        </div>
                        <div class="path-details">
                            <div class="path-label">ARK Installation</div>
                            <div class="path-value">@(string.IsNullOrEmpty(arkInstallPath) ? "Not found" : arkInstallPath)</div>
                        </div>
                    </div>
                    <div class="path-action">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                        </svg>
                    </div>
                </div>
                <div class="path-item clickable" @onclick="() => OpenFolderInExplorer(configPath)">
                    <div class="path-info-left">
                        <div class="path-icon-container">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="path-details">
                            <div class="path-label">Config Directory</div>
                            <div class="path-value">@(string.IsNullOrEmpty(configPath) ? "Not found" : configPath)</div>
                        </div>
                    </div>
                    <div class="path-action">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@code {
    private SystemStatus systemStatus = new SystemStatus { IsHealthy = true };
    private DateTime currentTime = DateTime.Now;
    private System.Timers.Timer? updateTimer; // Consolidated timer for clock and session
    private string timeZoneInfo = "";
    private string utcOffset = "";
    private int weekNumber = 0;

    private WeatherData? weather = null;
    private bool weatherLoading = true;

    private long totalLifetimeClicks = 0;
    private string totalSessionTime = "0h 0m";
    private int configChanges = 0;
    private DateTime sessionStartTime = DateTime.Now;

    private const string CLICKS_STORAGE_KEY = "TotalLifetimeClicks";
    private const string CONFIG_CHANGES_STORAGE_KEY = "ConfigChanges";
    private const string SESSION_START_TIME_KEY = "SessionStartTime";

    // System resources
    private int cpuUsage = 0;
    private int ramUsage = 0;
    private int gpuUsage = 0;
    private double ramUsedGB = 0;
    private double ramTotalGB = 0;
    private double processMemoryMB = 0;
    private System.Timers.Timer? resourceTimer;
    private PerformanceCounter? cpuCounter;
    private PerformanceCounter? ramCounter;
    private List<PerformanceCounter> gpuCounters = new();
    private bool hasGpuCounter = false;
    private bool resourceMonitoringInitialized = false;
    private Process? currentProcess; // Cache current process to avoid creating new ones

    // WiFi and System Info
    private string wifiName = "Not Connected";
    private string wifiSignalStrength = "N/A";
    private string cpuName = "Unknown";
    private string gpuName = "Unknown";
    private string motherboardName = "Unknown";

    // ARK Path Management
    private string arkInstallPath = "";
    private string configPath = "";
    private bool isEditingArkPath = false;
    private string customArkPath = "";
    private const string CustomPathPreferenceKey = "CustomArkInstallPath";

    private bool _isDisposed = false;

    protected override async Task OnInitializedAsync()
    {
        // Initialize timezone information
        var localTimeZone = TimeZoneInfo.Local;
        timeZoneInfo = localTimeZone.DisplayName;
        UpdateTimeZoneInfo();

        // Load ARK paths
        LoadArkPaths();

        // Load or create session start time
        await LoadSessionStartTime();

        // Start consolidated update timer (updates clock and session time together)
        // Set to 1 second for smooth clock updates without excessive overhead
        updateTimer = new System.Timers.Timer(1000);
        updateTimer.Elapsed += (s, e) =>
        {
            if (_isDisposed)
                return;

            currentTime = DateTime.Now;
            UpdateSessionTime();
            UpdateTimeZoneInfo();

            if (!_isDisposed)
                InvokeAsync(StateHasChanged);
        };
        updateTimer.Start();

        // Load weather data asynchronously (don't block page load)
        _ = LoadWeatherData();

        // Load statistics from storage
        await LoadStatistics();

        // Add initial activity
        ActivityService.AddActivity("Dashboard loaded", "success");

        // Start resource monitoring in background to prevent UI blocking
        _ = Task.Run(() => StartResourceMonitoring());

        // Load WiFi and system information (run in background to avoid blocking)
        _ = Task.Run(() =>
        {
            LoadWiFiInfo();
            LoadSystemHardwareInfo();
            InvokeAsync(StateHasChanged);
        });

        await base.OnInitializedAsync();
    }

