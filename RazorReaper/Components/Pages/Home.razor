@code {
    private SystemStatus systemStatus = new SystemStatus { IsHealthy = true };
    private DateTime currentTime = DateTime.Now;
    private System.Timers.Timer? clockTimer;

    private WeatherData? weather = null;
    private bool weatherLoading = true;

    private long totalLifetimeClicks = 0;
    private string totalSessionTime = "0h 0m";
    private int configChanges = 0;

    private static List<ActivityItem> recentActivities = new List<ActivityItem>();

    // System resources
    private int cpuUsage = 0;
    private int ramUsage = 0;
    private double ramUsedGB = 0;
    private double ramTotalGB = 0;
    private double processMemoryMB = 0;
    private System.Timers.Timer? resourceTimer;
    private PerformanceCounter? cpuCounter;
    private PerformanceCounter? ramCounter;

    protected override async Task OnInitializedAsync()
    {
        // Start clock timer
        clockTimer = new System.Timers.Timer(1000);
        clockTimer.Elapsed += (s, e) =>
        {
            currentTime = DateTime.Now;
            InvokeAsync(StateHasChanged);
        };
        clockTimer.Start();

        // Load weather data
        await LoadWeatherData();

        // Load statistics from storage
        await LoadStatistics();

        // Add initial activity
        AddActivity("Dashboard loaded", "success");

        // Start resource monitoring
        StartResourceMonitoring();

        await base.OnInitializedAsync();
    }

    [DllImport("kernel32.dll")]
    [return: MarshalAs(UnmanagedType.Bool)]
    static extern bool GetPhysicallyInstalledSystemMemory(out long TotalMemoryInKilobytes);

    private void StartResourceMonitoring()
    {
        try
        {
            // Initialize performance counters
            cpuCounter = new PerformanceCounter("Processor", "% Processor Time", "_Total");
            ramCounter = new PerformanceCounter("Memory", "% Committed Bytes In Use");

            // Get total RAM using WMI
            GetPhysicallyInstalledSystemMemory(out long totalMemoryKB);
            ramTotalGB = Math.Round(totalMemoryKB / 1024.0 / 1024.0, 2);

            // First read to initialize counters
            cpuCounter.NextValue();
            ramCounter.NextValue();

            // Start monitoring timer
            resourceTimer = new System.Timers.Timer(2000); // Update every 2 seconds
            resourceTimer.Elapsed += UpdateResources;
            resourceTimer.Start();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Resource monitoring error: {ex.Message}");
        }
    }

    private void UpdateResources(object? sender, System.Timers.ElapsedEventArgs e)
    {
        try
        {
            // Get CPU usage
            cpuUsage = (int)Math.Round(cpuCounter?.NextValue() ?? 0);

            // Get RAM usage
            ramUsage = (int)Math.Round(ramCounter?.NextValue() ?? 0);

            // Calculate used RAM
            var totalMemory = (long)(ramTotalGB * 1024.0 * 1024.0 * 1024.0);
            ramUsedGB = Math.Round((ramUsage / 100.0) * ramTotalGB, 2);

            // Get current process memory
            var process = Process.GetCurrentProcess();
            processMemoryMB = Math.Round(process.WorkingSet64 / 1024.0 / 1024.0, 1);

            InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Resource update error: {ex.Message}");
        }
    }

    private async Task LoadWeatherData()
    {
        weatherLoading = true;
        StateHasChanged();

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.Timeout = TimeSpan.FromSeconds(15);

            // First get IP location using ipapi.co (more reliable)
            try
            {
                var ipResponse = await httpClient.GetStringAsync("https://ipapi.co/json/");
                var ipData = JsonDocument.Parse(ipResponse);
                var lat = ipData.RootElement.GetProperty("latitude").GetDouble();
                var lon = ipData.RootElement.GetProperty("longitude").GetDouble();
                var city = ipData.RootElement.GetProperty("city").GetString() ?? "Unknown";
                var country = ipData.RootElement.GetProperty("country_name").GetString() ?? "Unknown";

                Console.WriteLine($"Location: {city}, {country} ({lat}, {lon})");

                // Get weather from Open-Meteo (free, no API key needed)
                var weatherUrl = $"https://api.open-meteo.com/v1/forecast?latitude={lat}&longitude={lon}&current=temperature_2m,apparent_temperature,weather_code&temperature_unit=celsius";
                var weatherResponse = await httpClient.GetStringAsync(weatherUrl);
                var weatherData = JsonDocument.Parse(weatherResponse);

                Console.WriteLine($"Weather data received: {weatherResponse.Substring(0, Math.Min(200, weatherResponse.Length))}");

                var temp = weatherData.RootElement.GetProperty("current").GetProperty("temperature_2m").GetDouble();
                var feelsLike = weatherData.RootElement.GetProperty("current").GetProperty("apparent_temperature").GetDouble();
                var weatherCode = weatherData.RootElement.GetProperty("current").GetProperty("weather_code").GetInt32();

                weather = new WeatherData
                {
                    Temperature = (int)Math.Round(temp),
                    FeelsLike = (int)Math.Round(feelsLike),
                    Condition = GetWeatherCondition(weatherCode),
                    City = city,
                    Country = country
                };

                Console.WriteLine($"Weather loaded successfully: {temp}°C, {GetWeatherCondition(weatherCode)}");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Primary weather API failed: {ex.Message}, trying fallback...");

                // Fallback: Use a simpler API
                var fallbackResponse = await httpClient.GetStringAsync("https://ipinfo.io/json");
                var fallbackData = JsonDocument.Parse(fallbackResponse);
                var loc = fallbackData.RootElement.GetProperty("loc").GetString()?.Split(',');

                if (loc != null && loc.Length == 2)
                {
                    var lat = double.Parse(loc[0]);
                    var lon = double.Parse(loc[1]);
                    var city = fallbackData.RootElement.GetProperty("city").GetString() ?? "Unknown";
                    var country = fallbackData.RootElement.GetProperty("country").GetString() ?? "Unknown";

                    var weatherUrl = $"https://api.open-meteo.com/v1/forecast?latitude={lat}&longitude={lon}&current=temperature_2m,apparent_temperature,weather_code&temperature_unit=celsius";
                    var weatherResponse = await httpClient.GetStringAsync(weatherUrl);
                    var weatherData = JsonDocument.Parse(weatherResponse);

                    var temp = weatherData.RootElement.GetProperty("current").GetProperty("temperature_2m").GetDouble();
                    var feelsLike = weatherData.RootElement.GetProperty("current").GetProperty("apparent_temperature").GetDouble();
                    var weatherCode = weatherData.RootElement.GetProperty("current").GetProperty("weather_code").GetInt32();

                    weather = new WeatherData
                    {
                        Temperature = (int)Math.Round(temp),
                        FeelsLike = (int)Math.Round(feelsLike),
                        Condition = GetWeatherCondition(weatherCode),
                        City = city,
                        Country = country
                    };
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Weather error: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            weather = null;
        }
        finally
        {
            weatherLoading = false;
            StateHasChanged();
        }
    }

    private string GetWeatherCondition(int code)
    {
        return code switch
        {
            0 => "Clear",
            1 or 2 or 3 => "Partly Cloudy",
            45 or 48 => "Foggy",
            51 or 53 or 55 => "Drizzle",
            61 or 63 or 65 => "Rain",
            71 or 73 or 75 => "Snow",
            80 or 81 or 82 => "Showers",
            95 or 96 or 99 => "Thunderstorm",
            _ => "Unknown"
        };
    }

