        }
    }

    public async ValueTask DisposeAsync()
    {
        Logger.LogDebug("Disposing Home component resources");

        _isDisposed = true;

        updateTimer?.Stop();
        updateTimer?.Dispose();
        resourceTimer?.Stop();
        resourceTimer?.Dispose();
        cpuCounter?.Dispose();
        ramCounter?.Dispose();
        currentProcess?.Dispose();

        // Dispose all GPU counters
        foreach (var counter in gpuCounters)
        {
            counter?.Dispose();
        }
        gpuCounters.Clear();

        await Task.CompletedTask;
    }
