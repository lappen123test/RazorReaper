<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar/>

    <main class="main-content">
        <header class="page-header">
            <h1 class="page-title">RazorReaper Dashboard</h1>
            <p class="page-subtitle">ARK: Survival Evolved Configuration & Server Management Tool</p>
        </header>

        <div class="dashboard-widgets">
            <div class="content-card widget-card clock-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                    <h3>Local Time</h3>
                </div>
                <div class="clock-display">
                    <div class="clock-time">@currentTime.ToString("HH:mm:ss")</div>
                    <div class="clock-date">@currentTime.ToString("dddd, MMMM dd, yyyy")</div>
                </div>
            </div>

            <div class="content-card widget-card weather-widget">
                <div class="widget-header">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="widget-icon">
                        <path fill-rule="evenodd" d="M5.5 16a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.977A4.5 4.5 0 1113.5 16h-8z" clip-rule="evenodd" />
                    </svg>
                    <h3>Weather</h3>
                </div>
                @if (weatherLoading)
                {
                    <div class="weather-loading">
                        <div class="spinner"></div>
                        <p>Loading weather...</p>
                    </div>
                }
                else if (weather != null)
                {
                    <div class="weather-display">
                        <div class="weather-icon-container">
                            @GetWeatherIcon(weather.Condition)
                        </div>
                        <div class="weather-main">
                            <div class="weather-temp">@weather.Temperature°C</div>
                            <div class="weather-condition">@weather.Condition</div>
                        </div>
                        <div class="weather-details">
                            <div class="weather-detail">
                                <span>Feels like:</span>
                                <span>@weather.FeelsLike°C</span>
                            </div>
                            <div class="weather-detail">
                                <span>Location:</span>
                                <span>@weather.City, @weather.Country</span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="weather-error-simple">
                        <p>Weather unavailable</p>
                        <button class="btn-small btn-retry" @onclick="LoadWeatherData">
                            Retry
                        </button>
                    </div>
                }
            </div>

            <div class="content-card widget-card stats-widget">
