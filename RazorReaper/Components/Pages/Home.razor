    private async Task LoadSessionStartTime()
    {
        try
        {
            // Use sessionStorage instead of localStorage - clears when app closes!
            var sessionStartStr = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", SESSION_START_TIME_KEY);

            if (!string.IsNullOrEmpty(sessionStartStr) && long.TryParse(sessionStartStr, out long ticks))
            {
                sessionStartTime = new DateTime(ticks);
                Logger.LogInformation("Session resumed: Started at {Time}, elapsed {Elapsed}",
                    sessionStartTime, DateTime.Now - sessionStartTime);
            }
            else
            {
                // New session - set fresh start time
                sessionStartTime = DateTime.Now;
                await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", SESSION_START_TIME_KEY, sessionStartTime.Ticks.ToString());
                Logger.LogInformation("New session started at {Time}", sessionStartTime);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading session start time, using current time");
            sessionStartTime = DateTime.Now;
        }
    }

