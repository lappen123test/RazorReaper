@code {
    private SystemStatus systemStatus = new SystemStatus { IsHealthy = true };
    private DateTime currentTime = DateTime.Now;
    private System.Timers.Timer? updateTimer; // Consolidated timer for clock and session

    private WeatherData? weather = null;
    private bool weatherLoading = true;

    private long totalLifetimeClicks = 0;
    private string totalSessionTime = "0h 0m";
    private int configChanges = 0;
    private DateTime sessionStartTime = DateTime.Now;

    private const string CLICKS_STORAGE_KEY = "TotalLifetimeClicks";
    private const string CONFIG_CHANGES_STORAGE_KEY = "ConfigChanges";
    private const string SESSION_START_TIME_KEY = "SessionStartTime";

    // System resources
    private int cpuUsage = 0;
    private int ramUsage = 0;
    private int gpuUsage = 0;
    private double ramUsedGB = 0;
    private double ramTotalGB = 0;
    private double processMemoryMB = 0;
    private System.Timers.Timer? resourceTimer;
    private PerformanceCounter? cpuCounter;
    private PerformanceCounter? ramCounter;
    private List<PerformanceCounter> gpuCounters = new();
    private bool hasGpuCounter = false;
    private bool resourceMonitoringInitialized = false;
    private Process? currentProcess; // Cache current process to avoid creating new ones

    // WiFi and System Info
    private string wifiName = "Not Connected";
    private string wifiSignalStrength = "N/A";
    private string cpuName = "Unknown";
    private string gpuName = "Unknown";
    private string motherboardName = "Unknown";

    private bool _isDisposed = false;

    protected override async Task OnInitializedAsync()
    {
        // Load or create session start time
        await LoadSessionStartTime();

        // Start consolidated update timer (updates clock and session time together)
        // Set to 1 second for smooth clock updates without excessive overhead
        updateTimer = new System.Timers.Timer(1000);
        updateTimer.Elapsed += (s, e) =>
        {
            if (_isDisposed)
                return;

            currentTime = DateTime.Now;
            UpdateSessionTime();

            if (!_isDisposed)
                InvokeAsync(StateHasChanged);
        };
        updateTimer.Start();

        // Load weather data asynchronously (don't block page load)
        _ = LoadWeatherData();

        // Load statistics from storage
        await LoadStatistics();

        // Add initial activity
        ActivityService.AddActivity("Dashboard loaded", "success");

        // Start resource monitoring in background to prevent UI blocking
        _ = Task.Run(() => StartResourceMonitoring());

        // Load WiFi and system information (run in background to avoid blocking)
        _ = Task.Run(() =>
        {
            LoadWiFiInfo();
            LoadSystemHardwareInfo();
            InvokeAsync(StateHasChanged);
        });

        await base.OnInitializedAsync();
    }

    [DllImport("kernel32.dll")]
    [return: MarshalAs(UnmanagedType.Bool)]
    static extern bool GetPhysicallyInstalledSystemMemory(out long TotalMemoryInKilobytes);

    private void StartResourceMonitoring()
    {
        try
        {
            // Initialize performance counters
            cpuCounter = new PerformanceCounter("Processor", "% Processor Time", "_Total");
            ramCounter = new PerformanceCounter("Memory", "% Committed Bytes In Use");

            // Try to initialize GPU counters - works for NVIDIA, AMD, Intel, and other GPUs on Windows 10+
            try
            {
                Logger.LogInformation("Detecting GPU performance counters...");

                if (PerformanceCounterCategory.Exists("GPU Engine"))
                {
                    var cat = new PerformanceCounterCategory("GPU Engine");
                    var instanceNames = cat.GetInstanceNames();

                    Logger.LogDebug("Found {Count} GPU Engine instances", instanceNames.Length);

                    // Find and create counters for ALL 3D engine instances (works across all GPU brands)
                    // engtype_3D is the standard Windows performance counter for 3D rendering workload
                    foreach (var instance in instanceNames)
                    {
                        if (instance.Contains("engtype_3D", StringComparison.OrdinalIgnoreCase))
                        {
                            try
                            {
                                var counter = new PerformanceCounter("GPU Engine", "Utilization Percentage", instance);
                                counter.NextValue(); // Initialize counter
                                gpuCounters.Add(counter);
                                Logger.LogDebug("GPU 3D Engine counter added: {Instance}", instance);
                            }
                            catch (Exception ex)
                            {
                                Logger.LogDebug(ex, "Failed to add GPU counter for instance: {Instance}", instance);
                            }
                        }
                    }

                    if (gpuCounters.Count > 0)
                    {
                        hasGpuCounter = true;
                        Logger.LogInformation("GPU monitoring enabled: Successfully initialized {Count} GPU 3D engine counter(s)", gpuCounters.Count);
                    }
                    else
                    {
                        Logger.LogWarning("GPU monitoring disabled: No GPU 3D engine counters found (this is normal for some older GPUs or driver versions)");
                        hasGpuCounter = false;
                    }
                }
                else
                {
                    Logger.LogWarning("GPU monitoring disabled: GPU Engine performance category not available (requires Windows 10 Fall Creators Update or later with compatible GPU drivers)");
                    hasGpuCounter = false;
                }
            }
            catch (Exception gpuEx)
            {
                Logger.LogWarning(gpuEx, "GPU monitoring disabled: Could not initialize GPU counters. This is normal for older systems or certain GPU configurations.");
                hasGpuCounter = false;
            }

            // Get total RAM using WMI
            GetPhysicallyInstalledSystemMemory(out long totalMemoryKB);
            ramTotalGB = Math.Round(totalMemoryKB / 1024.0 / 1024.0, 2);

            // Cache current process to avoid creating new ones every update
            currentProcess = Process.GetCurrentProcess();

            // First read to initialize counters
            cpuCounter.NextValue();
            ramCounter.NextValue();

            // Mark initialization as complete
            resourceMonitoringInitialized = true;

            // Start monitoring timer (3 seconds for good balance between responsiveness and performance)
            resourceTimer = new System.Timers.Timer(3000);
            resourceTimer.Elapsed += UpdateResources;
            resourceTimer.Start();

            Logger.LogInformation("Resource monitoring started: {TotalRAM} GB total RAM, GPU monitoring: {HasGPU} with {GPUCount} engines",
                ramTotalGB, hasGpuCounter, gpuCounters.Count);

            // Force first update after initialization
            InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error starting resource monitoring");
            resourceMonitoringInitialized = false;
        }
    }

    private void UpdateResources(object? sender, System.Timers.ElapsedEventArgs e)
    {
        // Don't update if initialization hasn't completed or component is disposed
        if (!resourceMonitoringInitialized || _isDisposed)
            return;

        try
        {
            // Get CPU usage
            cpuUsage = (int)Math.Round(cpuCounter?.NextValue() ?? 0);

            // Get RAM usage
            ramUsage = (int)Math.Round(ramCounter?.NextValue() ?? 0);

            // Get GPU usage - read from pre-created counters and calculate average for better accuracy
            if (hasGpuCounter && gpuCounters.Count > 0)
            {
                try
                {
                    float totalGpu = 0;
                    int validCounters = 0;

                    foreach (var counter in gpuCounters)
                    {
                        try
                        {
                            var value = counter.NextValue();
                            totalGpu += value;
                            validCounters++;
                        }
                        catch (Exception counterEx)
                        {
                            Logger.LogTrace(counterEx, "Failed to read individual GPU counter");
                        }
                    }

                    if (validCounters > 0)
                    {
                        // Average all GPU 3D engines for more accurate representation
                        gpuUsage = (int)Math.Round(totalGpu / validCounters);
                    }
                }
                catch (Exception gpuEx)
                {
                    Logger.LogDebug(gpuEx, "Error reading GPU usage");
                }
            }

            // Calculate used RAM
            var totalMemory = (long)(ramTotalGB * 1024.0 * 1024.0 * 1024.0);
            ramUsedGB = Math.Round((ramUsage / 100.0) * ramTotalGB, 2);

            // Get current process memory - use cached process to avoid lag
            if (currentProcess != null)
            {
                try
                {
                    currentProcess.Refresh(); // Refresh the cached process data
                    processMemoryMB = Math.Round(currentProcess.WorkingSet64 / 1024.0 / 1024.0, 1);
                }
                catch
                {
                    // Process might have exited, recreate it
                    currentProcess?.Dispose();
                    currentProcess = Process.GetCurrentProcess();
                    processMemoryMB = Math.Round(currentProcess.WorkingSet64 / 1024.0 / 1024.0, 1);
                }
            }

            if (!_isDisposed)
                InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating resource usage");
        }
    }

