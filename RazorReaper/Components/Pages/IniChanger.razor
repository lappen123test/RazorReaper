@page "/ini-changer"
@using Microsoft.Win32
@using System.IO
@using Microsoft.Extensions.Logging
@using RazorReaper.Components.Shared
@using RazorReaper.Services
@using RazorReaper.Models

@inject IIniPresetService PresetService
@inject IArkPathProvider ArkPathProvider
@inject IFileSystemService FileSystem
@inject ILogger<IniChanger> Logger
@inject INotificationService NotificationService
@inject IActivityService ActivityService

<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar />

    <main class="main-content">
        <header class="page-header glass-card fade-in">
            <h1 class="page-title">INI Configuration</h1>
            <p class="page-subtitle">Manage & optimize ARK configuration presets</p>
        </header>

        <div class="ini-layout">
            <div class="ini-operations-panel">
                <div class="glass-card">
                    <div class="section-info">
                        <div class="icon-circle white">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                            </svg>
                        </div>
                        <div>
                            <h3>File Operations</h3>
                            <p class="section-description">Load, modify & save BaseDeviceProfiles.ini</p>
                        </div>
                    </div>

                    <div class="file-operations">
                        <button class="glass-button" @onclick="OpenIniFile">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                            </svg>
                            Open INI File
                        </button>

                        <button class="glass-button" @onclick="CheckIniFileExists">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                            Check Path
                        </button>

                        <button class="glass-button" @onclick="SaveChanges">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M7.707 10.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V6h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h5v5.586l-1.293-1.293zM9 4a1 1 0 012 0v2H9V4z" />
                            </svg>
                            Save Changes
                        </button>

                        <button class="glass-button" @onclick="ClearFile">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd" />
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                            </svg>
                            Clear File
                        </button>
                    </div>
                </div>

                <div class="glass-card">
                    <div class="section-info">
                        <div class="icon-circle white">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div>
                            <h3>Water Surface</h3>
                            <p class="section-description">Remove water textures for underwater visibility</p>
                        </div>
                    </div>

                    <div class="water-info-clean">
                        <p>Removes water surface for clear visibility, independent of ini -config.</p>
                        <div style="display: flex; gap: 0.5rem; margin-top: 0.8rem; flex-wrap: wrap;">
                            <div class="feature-tag">🔍 Visibility</div>
                            <div class="feature-tag">⚔️ PvP</div>
                            <div class="feature-tag">🌊 Clear</div>
                        </div>
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                        <button class="glass-button" @onclick="CheckWaterFiles">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                            Check Files
                        </button>

                        <button class="glass-button" @onclick="DeleteWaterSurfaceFiles">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            Remove Water
                        </button>
                    </div>

                    <div class="restore-info-clean">
                        <p><strong>Restore:</strong> Verify game integrity through Steam to restore deleted files.</p>
                    </div>
                </div>
            </div>

            <div class="ini-main-column">
                <div class="glass-card">
                    <h3>Configuration Presets</h3>
                    <p style="color: var(--text-secondary); margin-bottom: 1.5rem; font-size: 0.8rem; line-height: 1.5;">
                        Optimized presets for different gameplay scenarios. Each preset is designed for performance and visual quality.
                    </p>

                    <div class="presets-grid">
                        @foreach (var preset in PresetService.GetAllPresets())
                        {
                            <button class="glass-button @(selectedPreset == preset.Name ? "active" : "")"
                                    @onclick="() => SelectPreset(preset)">
                                <div class="preset-info">
                                    <div class="preset-name">@preset.Name</div>
                                    <div class="preset-description">@preset.Description</div>
                                </div>
                            </button>
                        }
                    </div>
                </div>

                <div class="ini-content-area glass-card">
                    <h3>INI File Content</h3>
                    <textarea @bind="currentIniContent"
                              class="ini-textarea"
                              placeholder="INI file content will appear here..."></textarea>
                </div>

                <div class="glass-card">
                    <div class="images-header">
                        <div>
                            <h3>Configuration Previews</h3>
                            <p style="color: var(--text-secondary); margin: 0; font-size: 0.75rem;">Visual examples of each preset</p>
                        </div>
                        <button class="glass-button" @onclick="ToggleImages">
                            @(showImages ? "▼ Hide" : "▶ Show")
                        </button>
                    </div>

                    @if (showImages)
                    {
                        <div class="images-grid">
                            @foreach (var preset in PresetService.GetAllPresets())
                            {
                                <div class="image-item">
                                    <div class="image-preview">
                                        <img src="@PresetService.GetPresetImagePath(preset.Name)" alt="@preset.Name Preview" />
                                    </div>
                                    <div class="image-name">@preset.Name</div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>
</div>

@code {
    private string currentIniContent = "";
    private string selectedPreset = "";
    private bool showImages = false;

    private void ToggleImages()
    {
        showImages = !showImages;
    }

    private async Task OpenIniFile()
    {
        try
        {
            Logger.LogInformation("Opening INI file");

            // Run file operations on background thread to prevent UI freezing
            await Task.Run(() =>
            {
                string? iniPath = ArkUtilities.GetBaseDeviceProfilesPath();

                if (iniPath == null)
                {
                    InvokeAsync(() => NotificationService.ShowError("Steam installation not found in registry."));
                    return;
                }

                if (!File.Exists(iniPath))
                {
                    InvokeAsync(() => NotificationService.ShowWarning("INI file does not exist at expected location."));
                    return;
                }

                currentIniContent = File.ReadAllText(iniPath, System.Text.Encoding.UTF8);
                InvokeAsync(() =>
                {
                    NotificationService.ShowSuccess("INI file loaded successfully.");
                    ActivityService.AddActivity("INI file loaded successfully", "success");
                    StateHasChanged();
                });
                Logger.LogInformation("INI file loaded from: {Path}", iniPath);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading INI file");
            NotificationService.ShowError($"Error loading INI file: {ex.Message}");
        }
    }

    private async Task ClearFile()
    {
        try
        {
            Logger.LogInformation("Clearing INI file");

            // Run file operations on background thread
            await Task.Run(() =>
            {
                string? iniPath = ArkUtilities.GetBaseDeviceProfilesPath();

                if (iniPath == null)
                {
                    InvokeAsync(() => NotificationService.ShowError("Steam installation not found in registry."));
                    return;
                }

                currentIniContent = "";
                File.WriteAllText(iniPath, currentIniContent, System.Text.Encoding.UTF8);

                InvokeAsync(() =>
                {
                    selectedPreset = "";
                    NotificationService.ShowSuccess("INI file content cleared successfully.");
                    ActivityService.AddActivity("INI file cleared", "warning");
                    StateHasChanged();
                });
                Logger.LogInformation("INI file cleared");
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error clearing INI file");
            NotificationService.ShowError($"Error clearing INI file: {ex.Message}");
        }
    }

    private void SelectPreset(IniPreset preset)
    {
        selectedPreset = preset.Name;
        showImages = false;
        currentIniContent = preset.Content;
        NotificationService.ShowSuccess($"Selected preset: {preset.Name}");
        ActivityService.AddActivity($"Preset selected: {preset.Name}", "info");
        Logger.LogInformation("Preset selected: {PresetName}", preset.Name);
    }

    private async Task SaveChanges()
    {
        try
        {
            Logger.LogInformation("Saving INI file changes");

            // Run file operations on background thread
            await Task.Run(() =>
            {
                string? iniPath = ArkUtilities.GetBaseDeviceProfilesPath();

                if (iniPath == null)
                {
                    InvokeAsync(() => NotificationService.ShowError("Steam installation not found in registry."));
                    return;
                }

                var directory = Path.GetDirectoryName(iniPath);
                if (string.IsNullOrEmpty(directory))
                {
                    InvokeAsync(() => NotificationService.ShowError("Invalid directory path"));
                    Logger.LogError("Directory path is null or empty for INI file: {Path}", iniPath);
                    return;
                }

                if (!Directory.Exists(directory))
                {
                    Directory.CreateDirectory(directory);
                }

                File.WriteAllText(iniPath, currentIniContent, System.Text.Encoding.UTF8);
                InvokeAsync(() =>
                {
                    NotificationService.ShowSuccess("INI file saved successfully!");
                    ActivityService.AddActivity($"INI file saved{(string.IsNullOrEmpty(selectedPreset) ? "" : $" (Preset: {selectedPreset})")}", "success");
                });
                Logger.LogInformation("INI file saved to: {Path}", iniPath);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving INI file");
            NotificationService.ShowError($"Error saving INI file: {ex.Message}");
        }
    }

    private async Task CheckIniFileExists()
    {
        try
        {
            Logger.LogInformation("Checking INI file existence");

            // Run file operations on background thread
            await Task.Run(() =>
            {
                string? iniPath = ArkUtilities.GetBaseDeviceProfilesPath();

                if (iniPath == null)
                {
                    InvokeAsync(() => NotificationService.ShowError("Steam installation not found in registry. Please ensure Steam is properly installed."));
                    return;
                }

                if (!File.Exists(iniPath))
                {
                    InvokeAsync(() => NotificationService.ShowWarning($"INI file not found at: {iniPath}"));
                    Logger.LogWarning("INI file not found at: {Path}", iniPath);
                }
                else
                {
                    var fileInfo = new FileInfo(iniPath);
                    var fileSize = fileInfo.Length;
                    var lastModified = fileInfo.LastWriteTime;

                    InvokeAsync(() => NotificationService.ShowSuccess($"INI file found!\nPath: {iniPath}\nSize: {fileSize} bytes\nModified: {lastModified:yyyy-MM-dd HH:mm}"));
                    Logger.LogInformation("INI file found at: {Path}, Size: {Size} bytes", iniPath, fileSize);
                }
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking INI file");
            NotificationService.ShowError($"Error checking INI file: {ex.Message}");
        }
    }

    private async Task CheckWaterFiles()
    {
        try
        {
            Logger.LogInformation("Checking water files");

            // Run file operations on background thread
            await Task.Run(() =>
            {
                string? arkBasePath = ArkUtilities.FindArkPath();

                if (string.IsNullOrEmpty(arkBasePath) || !Directory.Exists(arkBasePath))
                {
                    InvokeAsync(() => NotificationService.ShowError("ARK installation not found. Please ensure ARK is properly installed."));
                    return;
                }

                string waterFilesPath = Path.Combine(arkBasePath, "ShooterGame", "Content", "PrimalEarth", "Effects", "Textures", "Generic");

                if (!Directory.Exists(waterFilesPath))
                {
                    InvokeAsync(() => NotificationService.ShowWarning($"Water files directory not found at: {waterFilesPath}"));
                    return;
                }

                var waterFiles = new[] { "SoftEdgeGradient_Linear.uasset", "SoftEdgeGradient.uasset" };
                var existingFiles = new List<string>();

                foreach (string fileName in waterFiles)
                {
                    string filePath = Path.Combine(waterFilesPath, fileName);
                    if (File.Exists(filePath))
                    {
                        existingFiles.Add(fileName);
                    }
                }

                if (existingFiles.Count == waterFiles.Length)
                {
                    InvokeAsync(() =>
                    {
                        NotificationService.ShowSuccess($"All water surface files found ({existingFiles.Count} files)\nPath: {waterFilesPath}");
                        ActivityService.AddActivity($"Water files check: All {existingFiles.Count} files found", "success");
                    });
                    Logger.LogInformation("All water files found at: {Path}", waterFilesPath);
                }
                else if (existingFiles.Count > 0)
                {
                    InvokeAsync(() =>
                    {
                        NotificationService.ShowWarning($"Partial water files found ({existingFiles.Count}/{waterFiles.Length} files)\nPath: {waterFilesPath}");
                        ActivityService.AddActivity($"Water files check: {existingFiles.Count}/{waterFiles.Length} files found", "warning");
                    });
                    Logger.LogWarning("Partial water files: {Count}/{Total} at {Path}", existingFiles.Count, waterFiles.Length, waterFilesPath);
                }
                else
                {
                    InvokeAsync(() =>
                    {
                        NotificationService.ShowInfo($"Water surface already removed (0/{waterFiles.Length} files found)\nPath: {waterFilesPath}");
                        ActivityService.AddActivity("Water files check: Already removed", "info");
                    });
                    Logger.LogInformation("No water files found - already removed");
                }
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking water files");
            NotificationService.ShowError($"Error checking water files: {ex.Message}");
        }
    }

    private async Task DeleteWaterSurfaceFiles()
    {
        try
        {
            Logger.LogInformation("Deleting water surface files");

            // Run file operations on background thread
            await Task.Run(() =>
            {
                string? arkBasePath = ArkUtilities.FindArkPath();

                if (string.IsNullOrEmpty(arkBasePath) || !Directory.Exists(arkBasePath))
                {
                    InvokeAsync(() => NotificationService.ShowError("ARK installation not found!"));
                    return;
                }

                string shooterGamePath = Path.Combine(arkBasePath, "ShooterGame", "Content", "PrimalEarth");
                int deletedCount = 0;

                var waterSurfaceFiles = new Dictionary<string, string[]>
                {
                    { Path.Combine(shooterGamePath, "Effects", "Textures", "Generic"), new[] {
                        "SoftEdgeGradient_Linear.uasset",
                        "SoftEdgeGradient.uasset"
                    }}
                };

                foreach (var folder in waterSurfaceFiles)
                {
                    string folderPath = folder.Key;
                    if (!Directory.Exists(folderPath))
                        continue;

                    foreach (string fileName in folder.Value)
                    {
                        string filePath = Path.Combine(folderPath, fileName);
                        if (File.Exists(filePath))
                        {
                            File.Delete(filePath);
                            deletedCount++;
                            Logger.LogInformation("Deleted water file: {FileName}", fileName);
                        }
                    }
                }

                int count = deletedCount;
                InvokeAsync(() =>
                {
                    NotificationService.ShowSuccess($"Successfully deleted {count} water surface file(s)");
                    ActivityService.AddActivity($"Water surface files deleted: {count} file(s)", "success");
                });
                Logger.LogInformation("Deleted {Count} water surface files", deletedCount);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting water surface files");
            NotificationService.ShowError($"Error deleting water surface files: {ex.Message}");
        }
    }

}
