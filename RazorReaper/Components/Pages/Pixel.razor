@page "/pixel"
@using System.Diagnostics
@using System.IO
@using RazorReaper.Components.Shared

<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar />

    <main class="main-content">
        <header class="page-header">
            <h1 class="page-title">Pixel Textures</h1>
            <p class="page-subtitle">Manage ARK texture files for visual modifications</p>
        </header>

        <div class="pixel-grid">
            <!-- Delete Textures Section -->
            <div class="pixel-card">
                <div class="card-header">
                    <div class="icon-badge">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <h3>Delete Textures</h3>
                        <p>Remove default texture files</p>
                    </div>
                </div>

                <div class="card-content">
                    <p class="description">
                        Deleting texture files creates a black/glitched appearance for weapons, tools, and armor in-game.
                    </p>

                    <div class="category-selector">
                        <div class="selector-header">
                            <label class="selector-label">
                                <span>Select Categories</span>
                                <span class="selector-count">@selectedCategories.Count / @textureCategories.Count</span>
                            </label>
                            <button class="collapse-toggle" @onclick="ToggleCategoryList">
                                <svg fill="currentColor" viewBox="0 0 20 20" class="@(isCategoryListExpanded ? "rotate-180" : "")">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        </div>

                        @if (isCategoryListExpanded)
                        {
                            <div class="selector-actions">
                                <button class="action-btn" @onclick="SelectAllCategories">
                                    <svg fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                    All
                                </button>
                                <button class="action-btn" @onclick="DeselectAllCategories">
                                    <svg fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                    None
                                </button>
                            </div>

                            <div class="category-list">
                                @foreach (var category in textureCategories.Keys)
                                {
                                    <label class="category-item">
                                        <input type="checkbox"
                                               checked="@selectedCategories.Contains(category)"
                                               @onchange="@(e => ToggleCategory(category, e))" />
                                        <span class="category-name">@category</span>
                                        <div class="category-info">
                                            <svg class="info-icon" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                            </svg>
                                            <div class="info-popup">@GetCategoryInfo(category)</div>
                                        </div>
                                    </label>
                                }
                            </div>
                        }
                    </div>

                    <button class="primary-btn danger" @onclick="DeleteTextureFiles" disabled="@(!selectedCategories.Any())">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        Delete @selectedCategories.Count @(selectedCategories.Count == 1 ? "Category" : "Categories")
                    </button>

                    @if (!string.IsNullOrEmpty(statusMessage))
                    {
                        <div class="status-alert">@statusMessage</div>
                    }
                </div>
            </div>

            <!-- Restore Section -->
            <div class="pixel-card">
                <div class="card-header">
                    <div class="icon-badge">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <h3>Restore Files</h3>
                        <p>Verify game integrity via Steam</p>
                    </div>
                </div>

                <div class="card-content">
                    <p class="description">
                        Use Steam's file verification to automatically restore deleted texture files.
                    </p>

                    <div class="process-steps">
                        <div class="process-step">
                            <div class="step-badge">1</div>
                            <span>Click verify integrity button</span>
                        </div>
                        <div class="process-step">
                            <div class="step-badge">2</div>
                            <span>Steam scans ARK files</span>
                        </div>
                        <div class="process-step">
                            <div class="step-badge">3</div>
                            <span>Missing files redownload</span>
                        </div>
                    </div>

                    <div class="button-stack">
                        <button class="primary-btn" @onclick="StartSteamVerifyIntegrity">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                            </svg>
                            Start Verify Integrity
                        </button>

                        <button class="secondary-btn" @onclick="OpenSteamLibrary">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                            </svg>
                            Open Steam Library
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    .pixel-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }

    /* Card Styles */
    .pixel-card {
        background: rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .pixel-card:hover {
        border-color: rgba(255, 255, 255, 0.12);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .icon-badge {
        width: 40px;
        height: 40px;
        background: rgba(139, 92, 246, 0.1);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .icon-badge svg {
        width: 20px;
        height: 20px;
        color: rgba(139, 92, 246, 0.8);
    }

    .card-header h3 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
    }

    .card-header p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        flex: 1;
    }

    .description {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.6;
    }

    /* Category Selector */
    .category-selector {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .selector-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
    }

    .selector-label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 600;
        flex: 1;
    }

    .collapse-toggle {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 8px;
        color: var(--text-secondary);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .collapse-toggle:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(139, 92, 246, 0.3);
        color: rgba(139, 92, 246, 0.9);
    }

    .collapse-toggle svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .collapse-toggle svg.rotate-180 {
        transform: rotate(180deg);
    }

    .selector-count {
        background: rgba(139, 92, 246, 0.15);
        color: rgba(139, 92, 246, 0.9);
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8rem;
    }

    .selector-actions {
        display: flex;
        gap: 0.75rem;
    }

    .action-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.6rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 8px;
        color: var(--text-secondary);
        cursor: pointer;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .action-btn svg {
        width: 14px;
        height: 14px;
    }

    .action-btn:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.15);
        color: var(--text-primary);
    }

    .category-list {
        max-height: 320px;
        overflow-y: auto;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        padding: 0.5rem;
    }

    .category-list::-webkit-scrollbar {
        width: 6px;
    }

    .category-list::-webkit-scrollbar-track {
        background: transparent;
    }

    .category-list::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
    }

    .category-list::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    .category-item {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        cursor: pointer;
        border-radius: 6px;
        transition: background 0.2s ease;
        position: relative;
    }

    .category-item:hover {
        background: rgba(255, 255, 255, 0.03);
    }

    .category-item input[type="checkbox"] {
        width: 16px;
        height: 16px;
        margin-right: 0.75rem;
        cursor: pointer;
        accent-color: rgba(139, 92, 246, 0.8);
    }

    .category-name {
        flex: 1;
        color: var(--text-primary);
        font-size: 0.9rem;
    }

    .category-info {
        position: relative;
        margin-left: 0.5rem;
    }

    .info-icon {
        width: 16px;
        height: 16px;
        color: rgba(255, 255, 255, 0.3);
        cursor: help;
        transition: color 0.2s ease;
    }

    .info-icon:hover {
        color: rgba(139, 92, 246, 0.8);
    }

    .info-popup {
        position: absolute;
        right: calc(100% + 0.75rem);
        top: 50%;
        transform: translateY(-50%);
        padding: 0.75rem 1rem;
        background: rgba(10, 10, 10, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: var(--text-secondary);
        font-size: 0.75rem;
        line-height: 1.5;
        width: 280px;
        max-height: 200px;
        overflow-y: auto;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.2s ease, visibility 0.2s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        pointer-events: none;
    }

    .category-info:hover .info-popup {
        opacity: 1;
        visibility: visible;
    }

    /* Process Steps */
    .process-steps {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        padding: 1rem;
    }

    .process-step {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .step-badge {
        width: 24px;
        height: 24px;
        background: rgba(139, 92, 246, 0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        font-weight: 600;
        color: rgba(139, 92, 246, 0.9);
        flex-shrink: 0;
    }

    .process-step span {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Buttons */
    .button-stack {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        margin-top: auto;
    }

    .primary-btn,
    .secondary-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 0.9rem 1.2rem;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .primary-btn svg,
    .secondary-btn svg {
        width: 16px;
        height: 16px;
        flex-shrink: 0;
    }

    .primary-btn {
        background: rgba(139, 92, 246, 0.15);
        border: 1px solid rgba(139, 92, 246, 0.3);
        color: rgba(139, 92, 246, 1);
    }

    .primary-btn:hover:not(:disabled) {
        background: rgba(139, 92, 246, 0.25);
        border-color: rgba(139, 92, 246, 0.5);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(139, 92, 246, 0.2);
    }

    .primary-btn.danger {
        background: rgba(239, 68, 68, 0.1);
        border-color: rgba(239, 68, 68, 0.3);
        color: #ef4444;
    }

    .primary-btn.danger:hover:not(:disabled) {
        background: rgba(239, 68, 68, 0.15);
        border-color: rgba(239, 68, 68, 0.5);
        box-shadow: 0 8px 20px rgba(239, 68, 68, 0.2);
    }

    .primary-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
        transform: none !important;
    }

    .secondary-btn {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        color: var(--text-primary);
    }

    .secondary-btn:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    /* Status Alert */
    .status-alert {
        padding: 1rem;
        background: rgba(139, 92, 246, 0.1);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 8px;
        color: rgba(139, 92, 246, 0.9);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .pixel-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private string statusMessage = "";
    private string arkPath = "";
    private HashSet<string> selectedCategories = new HashSet<string>();
    private Dictionary<string, Dictionary<string, string[]>> textureCategories = new Dictionary<string, Dictionary<string, string[]>>();
    private bool isCategoryListExpanded = true;

    protected override Task OnInitializedAsync()
    {
        CheckArkInstallation();
        InitializeTextureCategories();
        selectedCategories = new HashSet<string>(textureCategories.Keys);
        return Task.CompletedTask;
    }

    private void ToggleCategoryList()
    {
        isCategoryListExpanded = !isCategoryListExpanded;
    }

    private void CheckArkInstallation()
    {
        try
        {
            string? foundPath = ArkUtilities.FindArkPath();
            if (foundPath != null && Directory.Exists(foundPath))
            {
                arkPath = foundPath;
            }
        }
        catch { }
    }

    private void InitializeTextureCategories()
    {
        textureCategories = PixelTextureCategories.GetCategories("{SHOOTERGAME}");
    }

    private void ToggleCategory(string category, ChangeEventArgs e)
    {
        bool isChecked = (bool)(e.Value ?? false);
        if (isChecked)
            selectedCategories.Add(category);
        else
            selectedCategories.Remove(category);
    }

    private void SelectAllCategories()
    {
        selectedCategories = new HashSet<string>(textureCategories.Keys);
    }

    private void DeselectAllCategories()
    {
        selectedCategories.Clear();
    }

    private MarkupString GetCategoryInfo(string category)
    {
        if (!textureCategories.ContainsKey(category))
            return new MarkupString("No info available");

        var fileList = new List<string>();
        foreach (var folder in textureCategories[category])
        {
            foreach (var fileName in folder.Value)
            {
                if (!string.IsNullOrEmpty(fileName))
                {
                    string clean = fileName.Replace(".uasset", "").Replace("_", " ");
                    fileList.Add(clean);
                }
            }
        }

        if (!fileList.Any())
            return new MarkupString("No files");

        return new MarkupString(string.Join("<br/>‚Ä¢ ", fileList.Select(f => $"‚Ä¢ {f}")));
    }

    private void DeleteTextureFiles()
    {
        try
        {
            if (!selectedCategories.Any())
            {
                statusMessage = "‚ö†Ô∏è Select at least one category";
                StateHasChanged();
                return;
            }

            string? arkBasePath = ArkUtilities.FindArkPath();
            if (string.IsNullOrEmpty(arkBasePath) || !Directory.Exists(arkBasePath))
            {
                statusMessage = "‚ùå ARK installation not found";
                StateHasChanged();
                return;
            }

            string shooterGamePath = Path.Combine(arkBasePath, "ShooterGame", "Content", "PrimalEarth");
            int deletedCount = 0;
            var allCategories = PixelTextureCategories.GetCategories(shooterGamePath);

            foreach (var category in selectedCategories)
            {
                if (!allCategories.ContainsKey(category)) continue;

                foreach (var folder in allCategories[category])
                {
                    if (!Directory.Exists(folder.Key)) continue;

                    foreach (string fileName in folder.Value)
                    {
                        if (string.IsNullOrEmpty(fileName)) continue;
                        string filePath = Path.Combine(folder.Key, fileName);
                        if (File.Exists(filePath))
                        {
                            File.Delete(filePath);
                            deletedCount++;
                        }
                    }
                }
            }

            statusMessage = $"‚úÖ Deleted {deletedCount} files from {selectedCategories.Count} categories";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            statusMessage = $"‚ùå Error: {ex.Message}";
            StateHasChanged();
        }
    }

    private void StartSteamVerifyIntegrity()
    {
        try
        {
            Process.Start(new ProcessStartInfo
            {
                FileName = "steam://validate/346110",
                UseShellExecute = true
            });
            statusMessage = "üîÑ Starting Steam verification...";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            statusMessage = $"‚ùå Error: {ex.Message}";
            StateHasChanged();
        }
    }

    private void OpenSteamLibrary()
    {
        try
        {
            Process.Start(new ProcessStartInfo
            {
                FileName = "steam://nav/games/details/346110",
                UseShellExecute = true
            });
            statusMessage = "üìö Opening ARK in Steam";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            statusMessage = $"‚ùå Error: {ex.Message}";
            StateHasChanged();
        }
    }
}
