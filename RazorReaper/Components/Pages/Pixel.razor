@code {
    private string statusMessage = "";
    private string arkPath = "";
    private bool isDropdownOpen = false;
    private HashSet<string> selectedCategories = new HashSet<string>();
    private Dictionary<string, Dictionary<string, string[]>> textureCategories = new Dictionary<string, Dictionary<string, string[]>>();

    protected override Task OnInitializedAsync()
    {
        CheckArkInstallation();
        InitializeTextureCategories();
        // Select all categories by default
        selectedCategories = new HashSet<string>(textureCategories.Keys);
        return Task.CompletedTask;
    }

    private void CheckArkInstallation()
    {
        try
        {
            string? foundPath = ArkUtilities.FindArkPath();
            if (foundPath != null && Directory.Exists(foundPath))
            {
                arkPath = foundPath;
            }
            else
            {
                arkPath = "";
            }
        }
        catch (Exception)
        {
            arkPath = "";
        }
    }

    private void InitializeTextureCategories()
    {
        string shooterGamePath = "{SHOOTERGAME}";  // Placeholder, will be replaced in DeleteTextureFiles
        textureCategories = PixelTextureCategories.GetCategories(shooterGamePath);
    }

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
    }

    private void ToggleCategory(string category, ChangeEventArgs e)
    {
        bool isChecked = (bool)(e.Value ?? false);
        if (isChecked)
        {
            selectedCategories.Add(category);
        }
        else
        {
            selectedCategories.Remove(category);
        }
    }

    private void SelectAllCategories()
    {
        selectedCategories = new HashSet<string>(textureCategories.Keys);
    }

    private void DeselectAllCategories()
    {
        selectedCategories.Clear();
    }

    private string GetSelectedCategoriesText()
    {
        if (!selectedCategories.Any())
            return "No categories selected - Select to enable deletion";
        if (selectedCategories.Count == textureCategories.Count)
            return $"All categories selected ({textureCategories.Count} categories)";
        return $"{selectedCategories.Count} of {textureCategories.Count} categories selected";
    }

    private MarkupString GetCategoryInfo(string category)
    {
        if (!textureCategories.ContainsKey(category))
            return new MarkupString("No information available");

        var categoryFiles = textureCategories[category];
        var fileList = new List<string>();

        foreach (var folder in categoryFiles)
        {
            foreach (var fileName in folder.Value)
            {
                if (!string.IsNullOrEmpty(fileName))
                {
                    // Remove file extension and clean up the name
                    string cleanName = fileName.Replace(".uasset", "")
                                               .Replace("_", " ")
                                               .Replace("T ", "Texture ")
                                               .Replace("M ", "Material ")
                                               .Replace("SM ", "Static Mesh ");
                    fileList.Add(cleanName);
                }
            }
        }

        if (!fileList.Any())
            return new MarkupString("No files in this category");

        string info = "<div style='max-height: 380px;'>";
        info += string.Join("<br/>• ", fileList.Select(f => $"• {f}"));
        info += "</div>";

        return new MarkupString(info);
    }

    private void DeleteTextureFiles()
    {
        try
        {
            if (!selectedCategories.Any())
            {
                statusMessage = "Please select at least one category to delete!";
                StateHasChanged();
                return;
            }

            string? arkBasePath = ArkUtilities.FindArkPath();

            if (string.IsNullOrEmpty(arkBasePath) || !Directory.Exists(arkBasePath))
            {
                statusMessage = "ARK installation not found!";
                StateHasChanged();
                return;
            }

            string shooterGamePath = Path.Combine(arkBasePath, "ShooterGame", "Content", "PrimalEarth");
            int deletedCount = 0;

            // Get all categories with the actual path
            var allCategories = PixelTextureCategories.GetCategories(shooterGamePath);

            // Only process selected categories
            foreach (var selectedCategory in selectedCategories)
            {
                if (!allCategories.ContainsKey(selectedCategory))
                    continue;

                var categoryFiles = allCategories[selectedCategory];
                foreach (var folder in categoryFiles)
                {
                    string folderPath = folder.Key;
                    if (!Directory.Exists(folderPath))
                        continue;

                    foreach (string fileName in folder.Value)
                    {
                        if (string.IsNullOrEmpty(fileName))
                            continue;

                        string filePath = Path.Combine(folderPath, fileName);
                        if (File.Exists(filePath))
                        {
                            File.Delete(filePath);
                            deletedCount++;
                        }
                    }
                }
            }

            isDropdownOpen = false;  // Close dropdown after deletion
            statusMessage = $"✅ Successfully deleted {deletedCount} texture files from {selectedCategories.Count} categories";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Error deleting texture files: {ex.Message}";
            StateHasChanged();
        }
    }

    private void StartSteamVerifyIntegrity()
    {
        try
        {
            string steamVerifyUrl = "steam://validate/346110";
            Process.Start(new ProcessStartInfo
            {
                FileName = steamVerifyUrl,
                UseShellExecute = true
            });

            statusMessage = "🔄 Starting Steam file verification for ARK: Survival Evolved...";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Error starting verification: {ex.Message}";
            StateHasChanged();
        }
    }

    private void OpenSteamLibrary()
    {
        try
        {
            string steamLibraryUrl = "steam://nav/games/details/346110";
            Process.Start(new ProcessStartInfo
            {
                FileName = steamLibraryUrl,
                UseShellExecute = true
            });

            statusMessage = "📚 Opening ARK in Steam Library - right-click for properties menu";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Error opening Steam library: {ex.Message}";
            StateHasChanged();
        }
    }

    private string GetStatusBackgroundColor()
    {
        return "rgba(139, 92, 246, 0.1)";
    }

    private string GetStatusBorderColor()
    {
        return "var(--accent-purple)";
    }

    private string GetStatusTextColor()
    {
        return "var(--accent-purple)";
    }
}
