@page "/pixel"
@using System.Diagnostics
@using System.IO
@using RazorReaper.Components.Shared

<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar />

    <main class="main-content">
        <header class="page-header">
            <h1 class="page-title">Pixel Textures</h1>
            <p class="page-subtitle">Manage ARK texture files and pixel modifications</p>
        </header>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; height: calc(100vh - 200px);">

            <div class="content-card" style="height: fit-content; overflow: visible;">
                <h3 class="mb-3">Delete Texture Files</h3>

                <div style="margin-bottom: 2rem;">
                    <p style="color: var(--text-secondary); margin-bottom: 1rem; line-height: 1.6;">
                        Remove Ark's default texture files to achieve a visually bugged black appearance for Tools, Armor, and Weapons. (Some Saddles as well.)
                    </p>

                    <div class="warning-box">
                        <div style="display: flex; align-items: center; margin-bottom: 0.5rem;">
                            <svg style="width: 20px; height: 20px; color: var(--accent-purple); margin-right: 0.5rem;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            <strong style="color: var(--accent-purple);">Warning</strong>
                        </div>
                        <p style="color: var(--text-secondary); font-size: 0.9rem; margin: 0;">
                            This action will permanently delete texture files from your ARK installation.
                        </p>
                    </div>
                </div>

                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <div class="dropdown-container">
                        <label style="display: block; color: var(--text-secondary); margin-bottom: 0.5rem; font-size: 0.9rem; font-weight: 600;">
                            Select Texture Categories:
                        </label>
                        <button class="dropdown-toggle" @onclick="ToggleDropdown" type="button">
                            <span>@GetSelectedCategoriesText()</span>
                            <svg style="width: 16px; height: 16px; margin-left: auto; transition: transform 0.3s; transform: rotate(@(isDropdownOpen ? "180deg" : "0deg"));" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>

                        @if (isDropdownOpen)
                        {
                            <div class="dropdown-menu">
                                <div class="dropdown-header">
                                    <button class="dropdown-control-btn" @onclick="SelectAllCategories">Select All</button>
                                    <button class="dropdown-control-btn" @onclick="DeselectAllCategories">Deselect All</button>
                                </div>
                                @foreach (var category in textureCategories.Keys)
                                {
                                    <label class="dropdown-item">
                                        <input type="checkbox"
                                               checked="@selectedCategories.Contains(category)"
                                               @onchange="@(e => ToggleCategory(category, e))" />
                                        <span>@category</span>
                                        <div class="info-icon-container">
                                            <svg class="info-icon" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                            </svg>
                                            <div class="info-tooltip">
                                                @GetCategoryInfo(category)
                                            </div>
                                        </div>
                                    </label>
                                }
                            </div>
                        }
                    </div>

                    <button class="btn btn-danger" @onclick="DeleteTextureFiles" disabled="@(!selectedCategories.Any())">
                        <svg style="width: 16px; height: 16px; margin-right: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        Delete Selected Textures (@selectedCategories.Count)
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(statusMessage))
                {
                    <div class="mt-3" style="padding: 1rem; background: @GetStatusBackgroundColor(); border-radius: 8px; border-left: 3px solid @GetStatusBorderColor();">
                        <div style="color: @GetStatusTextColor(); font-weight: 600;">@statusMessage</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(arkPath))
                {
                    <div class="pixel-path-card">
                        <div class="path-icon-small">
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                            </svg>
                        </div>
                        <div>
                            <div style="color: var(--accent-purple); font-weight: 600; font-size: 0.85rem; margin-bottom: 0.25rem;">ARK Installation</div>
                            <div style="color: var(--text-secondary); font-size: 0.8rem; word-break: break-all; font-family: 'Courier New', monospace;">@arkPath</div>
                        </div>
                    </div>
                }
            </div>

            <div class="content-card" style="height: fit-content;">
                <h3 class="mb-3">Repair Game Files</h3>

                <div style="margin-bottom: 2rem;">
                    <p style="color: var(--text-secondary); margin-bottom: 1rem; line-height: 1.6;">
                        After deleting texture files, you can restore them by verifying the integrity of your ARK game files through Steam.
                    </p>

                    <div style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
                        <div class="feature-tag">🔧 Steam Integration</div>
                        <div class="feature-tag">📁 File Verification</div>
                        <div class="feature-tag">🔄 Auto Repair</div>
                    </div>
                </div>

                <div class="repair-process-box">
                    <h4 style="color: var(--accent-purple); margin-bottom: 1rem; font-weight: 600;">Repair Process</h4>
                    <div style="display: grid; gap: 1rem;">
                        <div style="display: flex; align-items: center;">
                            <div class="step-number">1</div>
                            <span style="color: var(--text-secondary); font-size: 0.9rem;">Click "Start Verify Integrity" button</span>
                        </div>
                        <div style="display: flex; align-items: center;">
                            <div class="step-number">2</div>
                            <span style="color: var(--text-secondary); font-size: 0.9rem;">Steam will automatically verify ARK files</span>
                        </div>
                        <div style="display: flex; align-items: center;">
                            <div class="step-number">3</div>
                            <span style="color: var(--text-secondary); font-size: 0.9rem;">Deleted files will be redownloaded</span>
                        </div>
                    </div>
                </div>

                <div style="display: flex; flex-direction: column; gap: 1rem;">
                    <button class="btn btn-primary" @onclick="StartSteamVerifyIntegrity">
                        <svg style="width: 16px; height: 16px; margin-right: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                        </svg>
                        Start Verify Integrity
                    </button>

                    <button class="btn btn-secondary" @onclick="OpenSteamLibrary">
                        <svg style="width: 16px; height: 16px; margin-right: 0.75rem;" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                        </svg>
                        Open Steam Library
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

